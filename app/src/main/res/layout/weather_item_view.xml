<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_item_view"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="200dp"
    android:layout_margin="16dp"
    android:background="@color/scroll_item_background"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AdditionalInfoText"
            android:text="@string/sol" />

        <TextView
            android:id="@+id/item_sol_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AdditionalInfoText"
            tools:text="741"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_thermometer_1_icon_32px"/>
        <TextView
            android:id="@+id/item_temp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AdditionalInfoText"
            tools:text="-94.5..-4.1 \u2103"/>
    </LinearLayout>

</LinearLayout>

